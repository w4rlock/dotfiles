!Xcursor.theme:              gentoo-silver
!Xft.dpi:                   75

URxvt.background:           black
URxvt.foreground:           white
URxvt.geometry:             150x30
URxvt.jumpScroll:           true
URxvt.skipScroll:           true
URxvt.transparent:          true
URxvt*shading:26
URxvt*fading:20
!URxvt.tintColor:      grey30
!urxvt*font:        -xos4-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
urxvt*font: xft:Terminess Powerline:size=8
!Xft.dpi:                    96
!Xft.antialias:              true
!Xft.rgba:                   rgb
!Xft.hinting:                true
!Xft.hintstyle:              hintslight
!URxvt*font: xft:Terminess Powerline:size=12
URxvt.mapAlert:             true
URxvt.loginShell:           true
URxvt.scrollBar:            false
URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true
URxvt.saveLines:            65535
URxvt.internalBorder:       5
URxvt.externalBorder:       0
URxvt.pastableTabs:         true
URxvt.pointerBlank:         true
URxvt.pointerBlankDelay:    5
URxvt.tripleclickwords:     true

URxvt.multiScroll:      true
URxvt.scrollKey:      true

! perl stuff
URxvt.perl-ext-common:      default,matcher,confirm-paste
URxvt.urlLauncher:          chromium-browser
URxvt.matcher.button:       1


